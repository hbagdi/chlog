{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "description": {
                "type": "string",
                "description": "Description of the change",
                "minLength": 10,
                "maxLength": 1024
            },
            "enterprise": {
                "type": "boolean",
                "description": "Is this change Enterprise only"
            },
            "deprecation-action": {
                "type": "string",
                "description": "Describe specific action that a user must take in order to handle this deprecation",
                "minLength": 10,
                "maxLength": 1024
            },
            "sub-system": {
                "type": "string",
                "description": "Subsystem affected by the change",
                "enum": [
                    "Core",
                    "Plugins",
                    "Admin-api",
                    "PDK",
                    "Misc"
                ]
            },
            "upgrade-action": {
                "type": "string",
                "description": "Description of the upgrade action",
                "minLength": 10,
                "maxLength": 1024
            },
            "change-type": {
                "type": "string",
                "description": "Type of change",
                "enum": [
                    "Feature",
                    "Fix",
                    "Deprecation",
                    "Breaking change"
                ]
            },
            "jira-links": {
                "type": "array",
                "description": "List of associated Jira links",
                "items": {
                    "type": "string",
                    "pattern": "^[A-Z]+-[0-9]+$"
                },
                "minItems": 0
            },
            "github-refs": {
                "type": "object",
                "description": "Associated GitHub issue or PR numbers",
                "items": {
                  "type": "object",
                  "properties": {
                    "repo": {
                      "type": "string",
                      "description": "Owner and name of the repo, example: 'torvalds/linux'"
                    },
                    "issue": {
                      "type": "integer",
                      "description": "issue or PR number, example 42"
                    }
                  },
                  "required": ["repo", "issue"]
                }
            }
        },
        "required": [
            "description",
            "sub-system",
            "change-type"
        ]
    }
}                                                                                                                                                                                    
